{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "App.tsx",
    "app/src",
    "supabase/functions/**/*.ts"
  ]
}
